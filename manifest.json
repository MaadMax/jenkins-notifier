{
  "manifest_version": 2,

  "name": "Jenkins Notifier",
  "description": "When Jenkins finish Ã  job, you'll be notified even if the job is successfuly ended or crashed.",
  "author": "Maxime LAFARIE",
  "version": "1.0",

  "background": {
    "scripts": ["jquery.js", "popup.js", "getPagesSource.js"],
    "persistent": false
    },
    "content_scripts": [
    {
      "matches": ["http://forge.raccourci.dev/*"],
      "js": ["jquery.js", "popup.js"]
    }
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
      },
      "permissions": [
      "unlimitedStorage",
      "tabs",
      "activeTab",
      "http://forge.raccourci.dev/*"
      ]
    }